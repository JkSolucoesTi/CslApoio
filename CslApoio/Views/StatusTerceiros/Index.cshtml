@model IEnumerable<CslApoio.Models.StatusTerceiro>

@{
    ViewData["Title"] = "Index";
}

<h1>Status de Terceiro</h1>

<table class="table table-striped">
    <thead>
        <tr class="table-secondary">
            <th>
                Opção
            </th>
            <th>
                Ação
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Opcoes)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    @*<a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
<hr />
<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Novo</a>
</p>
