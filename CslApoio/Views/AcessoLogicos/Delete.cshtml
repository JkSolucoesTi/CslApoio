@model CslApoio.Models.AcessoLogico

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>
<h3>Deseja deletar esta opção ?</h3>

<div>
    <h4>Acesso Lógico</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Opção :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opcoes)
        </dd>
    </dl>
    <hr />
    <form asp-action="Delete">
        <div class="form-row">
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-md-2">
                <input type="submit" value="Deletar" class="btn btn-danger btn-sm" />
            </div>
            <div class="form-group col-md-2">
                <a class="btn btn-info btn-sm" asp-action="Index">Voltar</a>
            </div>
        </div>
    </form>
    <hr />
</div>