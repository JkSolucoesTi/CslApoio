@model CslApoio.Models.Acao

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Acao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Opcoes" class="control-label"></label>
                <input asp-for="Opcoes" class="form-control" />
                <span asp-validation-for="Opcoes" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <hr />
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="submit" value="Alterar" class="btn btn-primary btn-sm" />
                </div>
                <div class="form-group col-md-2">
                    <a class="btn btn-info btn-sm" asp-action="Index">Voltar</a>
                </div>
            </div>
            <hr />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
