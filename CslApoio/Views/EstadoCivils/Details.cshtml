@model CslApoio.Models.EstadoCivil

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes</h1>

<div>
    <h4>Estado Civil</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
             Opção :
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opcoes)
        </dd>
    </dl>
</div>
<hr />
<div class="form-row">
    <div class="form-group col-md-2">
        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    </div>
    <div class="form-group col-md-2">
        <a class="btn btn-info btn-sm" asp-action="Index">Voltar</a>
    </div>
</div>
<hr />