@model CslApoio.Models.EstadoCivil

@{
    ViewData["Title"] = "Create";
}

<h1>Novo</h1>
<h4>Estado Civil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Opção</label>
                <input asp-for="Opcoes" class="form-control" />
                <span asp-validation-for="Opcoes" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="submit" value="Adicionar" class="btn btn-primary btn-sm" />
                </div>
                <div class="form-group col-md-2">
                    <a class="btn btn-info btn-sm" asp-action="Index">Voltar</a>
                </div>
            </div>
            <hr />
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}